rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated admin
    function isAdmin() {
      // Only allow specific admin emails
      return request.auth != null && 
             request.auth.token.email in [
               'admin@binthjubilio.com', 
               // Add other admin emails here
             ];
    }

    // RSVPs Collection
    match /rsvps/{rsvpId} {
      // Allow anyone to create an RSVP (public form)
      allow create: if true;
      
      // Only admins can read, update, or delete RSVPs
      allow read, update, delete: if isAdmin();
    }

    // Guest List Collection (if you decide to move guest list to Firestore)
    match /guests/{guestId} {
      // Allow public read for RSVP validation
      allow read: if true;
      
      // Only admins can write
      allow write: if isAdmin();
    }
    
    // Default: Deny everything else
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
